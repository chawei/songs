<% @summary = @song.performer.bio_summary %>
<% @image = @song.performer.image_small_url %>

<div class="vote_block_container">
<%= render :partial => 'shared/vote_block', :locals => { :resource => @song } %>
</div>

<div class="section">
  <h3>Performer Bio</h3>
  <div class="artist_image"><%= image_tag @image if @image && @image == String %></div>
  <div class="artist_summary"><%= simple_format @summary if @summary %></div>
</div>