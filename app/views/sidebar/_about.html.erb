<% if @song.performer %>
<% @summary = @song.performer.bio_summary %>
<% @image = @song.performer.profile_image(:thumb) %>
<% end %>

<div class="section">
  <h3>Bio</h3>
  <div class="artist_image"><%= image_tag @image if @image && @image == String %></div>
  <div class="artist_summary"><%= simple_format @summary if @summary %></div>
</div>

<% if @song.main_release %>
<div id="album_section" class="section">
  <h3>Album</h3>
  <div class="album_name"><%= @song.main_release.title %></div>
  <div class="clear_fix">
    <div class="left cover_image">
      <%= image_tag @song.main_release.cover_image(:medium) %>
    </div>
  
    <div class="left songs">
    <% @song.main_release.songs.each do |song| %>
      <div class="song"><%= link_to song.title, song_path(song) %></div>
    <% end %>
    </div>
  </div>
</div>
<% end %>