<div class="song_info">
  <div class="title"><%= @lyric.title %></div>
  <div class="performer"><%= @lyric.performer_name %></div>
</div>

<div id="lyric">
  <% if @lyric.content.blank? %>
    <p>Sorry, there is no matched lyric.<br>Wanna be the first to submit the lyrics? 
      <%= link_to "Search online", "http://www.google.com/search?q=#{URI.escape(@lyric.title)}+#{URI.escape(@lyric.performer_name)}+lyrics&ie=UTF-8&oe=UTF-8", :target => '_blank' %></p>
  <% else %>
    <%= simple_format @lyric.content  %>
  <% end %>
</div>

<% if current_user && (@lyric.content.blank? || current_user.own_lyric?(@lyric)) %>
  <%= link_to "edit", "#", :class => 'edit_lyric_btn click_to_edit' %>
  <%= form_for(@lyric, :html => { :class => 'hline_form js_hidden', :id => 'lyric_form' }, :remote => true) do |f| %>
    <% if @lyric.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@lyric.errors.count, "error") %> prohibited this lyrics from being saved:</h2>

        <ul>
        <% @lyric.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_area :content %>

    <div class="actions">
      <div class="submit"><%= f.submit %></div>
    </div>
  <% end %>
<% end %>