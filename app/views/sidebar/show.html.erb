<div id="main">
  <div id="tabs">
  	<ul>
  		<li><a href="#tabs-lyric">lyric</a></li>
  		<li><a href="#tabs-stories">stories</a></li>
  		<li><a href="#tabs-about">about</a></li>
  		<!--
  		<li><a href="#tabs-3">more videos</a></li>
  		<li><a href="#tabs-3">thoughts</a></li>
  		<li><a href="#tabs-3">comments</a></li>
  		-->
  	</ul>
  	
  	<div class="tab_container">
	  <% if @is_supported %>
      <% if @lyric %>
    	<div id="tabs-lyric" class="tab_content">
        <div class="song_info">
          <div class="title"><%= @lyric.title %></div>
          <div class="performer"><%= @lyric.performer %></div>
        </div>

        <div class="lyric">
          <% if @lyric.content.blank? %>
            Sorry, no matched lyric
          <% else %>
            <%= simple_format @lyric.content  %>
          <% end %>
        </div>
    	</div>
    	<div id="tabs-stories" class="tab_content">
    	  <%= render :partial => 'background_stories/section' %>
    	</div>
    	<div id="tabs-about" class="tab_content">
    	  <%= render :partial => 'about' %>
    	</div>
    	<% else %>
    	<div class="tab_content">
        Sorry, we can't find any matches.
      </div>
      <% end %>
  	<% else %>
  	<div class="tab_content">
      Sorry, our app is not supported in this site.
    </div>
    <% end %>
    </div>
    <div class="clear"></div>
  </div>
  
  <div id="login_section">
  <% unless current_user %>
    <%= render :partial => 'shared/signin' %>
  <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
  	$("#tabs").tabs();
  });
</script>