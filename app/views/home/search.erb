<% title "Search Result", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class="index">
    <%- if @songs -%>
    <div class="section">
      <h2>Search Results</h2>
      
      <%- @songs.each do |song| -%>
      <div class="song_item clear_fix">
        <div class="detail">
          <%= link_to song.title, song_path(song), :class => 'title' %>
          <% if song.performer %>
          <span class="performer"><%= link_to song.performer.name, artist_path(song.performer) %></span>
          <% end %>
        </div>
        <%- if current_user and current_user.own_song?(song) -%>
        <div class="actions">
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= link_to 'Delete', song, :confirm => 'Are you sure?', :method => :delete %>
        </div>
        <%- end -%>
      </div>
      <%- end -%>
      
    </div>
    <%- end -%>
    
  </div>
  
  <div class="index">
    <% @artists.each do |artist| %>
    <div class="artist_item clear_fix">
      <div class="detail">
        <%= link_to artist.name, artist_path(artist), :class => 'name' %>
      </div>
      <%- if current_user -%>
      <div class="actions">
        <%= link_to 'Edit', edit_artist_path(artist) if current_user.admin? %>
        <%= link_to 'Delete', artist, :confirm => 'Are you sure?', :method => :delete if current_user.admin? %>
      </div>
      <%- end -%>
    </div>
    <%- end -%>
  </div>
  
  <%= will_paginate @artists %>
</div>