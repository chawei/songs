<div class="nav_links">
  <%= link_to 'Edit', edit_artist_path(@artist) if current_user && current_user.admin? %>
  <%= link_to 'Back to List', artists_path %>
</div>

<div id="artist_page" class="show_container clear_fix">
  <div id="artist_info">
    <div class="basic_info clear_fix">
      <div class="left">
        <div class="name"><%= @artist.name %></div>
        <div class="position"><%= @artist.primary_position %></div>
      </div>
      <div class="image"><%= image_tag @artist.image_large_url if @artist.image_large_url %></div>
    </div>
    <div class="bio"><%= @artist.bio_summary %></div>
  </div>
  
  <div class="index">
    <% @artist.performed_lyrics.each do |lyric| %>
    <div class="song_item clear_fix">
      <div class="detail">
        <%= link_to lyric.title, lyric_path(lyric), :class => 'title' %>
      </div>
    </div>  
    <% end %>
  </div>
</div>