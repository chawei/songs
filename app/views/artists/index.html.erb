<% title "Artists", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <span class='title'>List of artists</span>
    (<%= link_to 'add a new artist', new_artist_path %>)
  </div>

  <table class="index">
    <tr>
      <th>Name</th>
      <th>Full name</th>
      <th>Artist type</th>
      <th>Primary position</th>
      <th>Secondary position</th>
      <th></th>
    </tr>

  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.full_name %></td>
      <td><%= artist.artist_type %></td>
      <td><%= artist.primary_position %></td>
      <td><%= artist.secondary_position %></td>
      <td class="actions">
        <%= link_to 'View', artist %> |
        <%= link_to 'Edit', edit_artist_path(artist) %> |
        <%= link_to 'Delete', artist, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>