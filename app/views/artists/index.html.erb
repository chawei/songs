<% title "Artists", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <span class='title'>List of artists</span>
    (<%= link_to 'add a new artist', new_artist_path %>)
  </div>
  
  <div class="index">
    <% @artists.each do |artist| %>
    <div class="artist_item clear_fix">
      <div class="detail">
        <%= link_to artist.name, artist_path(artist), :class => 'name' %>
        <span class="type"><%= artist.artist_type %></span>
      </div>
      <%- if current_user -%>
      <div class="actions">
        <%= link_to 'Edit', edit_artist_path(artist) if current_user.admin? %>
        <%= link_to 'Delete', artist, :confirm => 'Are you sure?', :method => :delete if current_user.admin? %>
      </div>
      <%- end -%>
    </div>
    <%- end -%>
  </div>
</div>