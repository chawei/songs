  <div class="field">
    <div class="label"><%= f.label :performer %></div>
    <div class="input"><%= f.text_field :performer_name, :class => 'text' %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :writer %></div>
    <div class="input"><%= f.text_field :writer_name, :class => 'text' %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :album_name %></div>
    <div class="input"><%= f.text_field :album_name, :class => 'text' %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :year %></div>
    <div class="input"><%= f.text_field :year, :class => 'text' %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :content %></div>
    <div class="input"><%= f.text_area :content, :class => 'song' %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :video_url, 'Video URL' %></div>
    <div class="input"><%= f.text_field :video_url, :class => 'text' %></div>
  </div>

  <div class="actions">
    <div class="submit"><%= f.submit %></div>
  </div>
