<% title "Lyrics", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <%= link_to 'add a new lyric', new_lyric_path, :class => 'rounded_btn' %>
  </div>

  <div class="index">
    <%- @lyrics.each do |lyric| -%>
    <div class="song_item clear_fix">
      <div class="detail">
        <%= link_to lyric.title, lyric_path(lyric), :class => 'title' %>
        <% if lyric.performer %>
        <spanc class="performer">by <%= link_to lyric.performer.name, artist_path(lyric.performer) %></span>
        <% end %>
      </div>
      <%- if current_user -%>
      <div class="actions">
        <%= link_to 'Edit', edit_lyric_path(lyric) if current_user.own_lyric?(lyric) or current_user.admin? %>
        <%= link_to 'Delete', lyric, :confirm => 'Are you sure?', :method => :delete if current_user.admin? %>
      </div>
      <%- end -%>
    </div>
    <%- end -%>
  </div>
  
  <%= will_paginate @lyrics %>
</div>