<!DOCTYPE html>  
<html>  
  <head>  
    <title>Songs <%= h("- #{yield(:title)}") unless yield(:title).blank? %></title>  
  
    <%= stylesheet_link_tag 'base', 'layout', "form", "application" %>  
    
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>  
    <div id="container" class="no_js"> 
      <div id="flash_msgs"> 
        <% flash.each do |name, msg| %>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <% end %>
      </div>
      
      <div id="header_wrap">
        <div id="header">
          <div id="logo"><%= link_to "behind".html_safe, root_path %></div>
          <div id="login_box">
            <%- if current_user -%>
            <div id="greeting">
              Hello <span class="name"><%= link_to current_user.username, account_url %></span>
            </div>
            <%- end -%>
            <div id="actions">
              <div class="action_1">
                <%- if current_user -%>
                <%= link_to 'Logout', logout_path  %>
                <%- else -%>
                <%= link_to 'Sign Up', signup_path, :class => 'signup' %>
                <%= link_to 'Log in', login_path %>
                <%- end -%>
              </div>
            </div>
          </div> <!-- END login_box -->
        </div> <!-- END header -->
      </div>

      <div id="navigation_wrap" class="clear">
        <div id="navigation">
          <%= render_navigation %>
        </div>
      </div>
      
      <div id="main_wrap">
        <div id="main" class="clear_fix">
          <%- if show_title? -%>
          <h2 id="headline"><%=h yield(:title) %></h2>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
      
      <div id="footer_wrap">
        <div id="footer">
          <a id="bookmarklet" href="javascript:var e=document.createElement('script');e.setAttribute('language','javascript');e.setAttribute('src','http://<%= HOST %>/sidebar/load.js');document.body.appendChild(e);void(0);">show lyric</a>
        </div>
      </div>
    </div>
    
    <script type="text/javascript" charset="utf-8" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js"></script>
    <%= javascript_include_tag 'rails', 'application' %>
    <%= yield(:foot) %>
  </body>  
</html>