<!DOCTYPE html>  
<html>  
  <head>  
    <title>song <%= h("- #{yield(:title)}") unless yield(:title).blank? %></title>  
    
    <link href='http://fonts.googleapis.com/css?family=Arvo:regular,bold' rel='stylesheet' type='text/css'>
    <%= render 'layouts/head' %>
    
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>  
    <div id="container" class="no_js"> 
      <div id="flash_msgs_container">
        <div id="flash_msgs"> 
          <% flash.each do |name, msg| %>  
            <%= content_tag :div, msg, :id => "flash_#{name}" %>  
          <% end %>
        </div>
      </div>
      
      <div id="header_wrap">
        <div id="header" class="clear_fix">
          <div id="logo"><%= link_to "songBERG".html_safe, root_path %></div>
          
          <div id="searchfield_container" class="left">
            <%= form_tag search_path, :method => :get do %>
            <%= text_field_tag :search, nil, :class => 'text' %>
            <%= submit_tag "Search", :class => 'rounded_btn', :id => "search_btn" %>
            <% end %>
          </div>
          
          <div id="navigation" class="left">
            <div class="left"><%= render_navigation %></div>
          </div>
          
          <div id="login_box_container">
            <div id="login_box">
              <div id="greeting">
                <%- if current_user -%>
                <%= link_to current_user.username, account_url, :id => 'account_btn' %>
                <%- else -%>
                <%= link_to 'sign up', signup_path, :class => 'signup' %>
                <%= link_to 'log in', login_path %>
                <%- end -%>
              </div>
              <%- if current_user -%>
              <div class="actions hidden">
                <%- if current_user -%>
                <%= link_to 'setting', account_edit_path  %>
                <%= link_to 'logout', logout_path  %>
                <%- else -%>
                <%= link_to 'sign up', signup_path, :class => 'signup' %>
                <%= link_to 'log in', login_path %>
                <%- end -%>
              </div>
              <%- end -%>
            </div> <!-- END login_box -->
          </div>
        </div> <!-- END header -->
      </div>

      <div id="navigation_wrap" class="clear_fix">

      </div>
      
      <div id="main_wrap">
        <div id="main" class="clear_fix">
          <%- if show_title? -%>
          <h2 id="headline"><%=h yield(:title) %></h2>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
      
      <div class="push"></div>
    </div>
    <div id="footer_wrap">
      <div id="footer">
        <div id="bookmarklet_container">
          <span class="explanation">start using our app by dragging this button</span>
          <a id="bookmarklet" href="javascript:var e=document.createElement('script');e.setAttribute('language','javascript');e.setAttribute('src','http://<%= HOST %>/sidebar/load.js');document.body.appendChild(e);void(0);">show more</a>
          <span class="explanation">to your toolbar</span>
        </div>
        <div class="copyright">Â© 2011 songBERG</div>
      </div>
    </div>
    
    <%= render 'layouts/foot' %>
		
    <%= yield(:foot) %>
    
    <script src="http://static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(66361966); }catch(err){}</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="http://in.getclicky.com/66361966ns.gif" /></p></noscript>
  </body>  
</html>