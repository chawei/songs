<!DOCTYPE html>  
<html>  
  <head>  
    <title>Songs <%= h("- #{yield(:title)}") unless yield(:title).blank? %></title>  
    
    <link href='http://fonts.googleapis.com/css?family=Arvo:regular,bold' rel='stylesheet' type='text/css'>
    <%= render 'layouts/head' %>
    
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>  
    <div id="container" class="no_js"> 
      <div id="flash_msgs"> 
        <% flash.each do |name, msg| %>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <% end %>
      </div>
      
      <div id="header_wrap">
        <div id="header" class="clear_fix">
          <div id="logo"><%= link_to "songBERG".html_safe, root_path %></div>
          <div id="login_box">
            <%- if current_user -%>
            <div id="greeting">
              Hello <span class="name"><%= link_to current_user.username, account_url %></span>
            </div>
            <%- end -%>
            <div id="actions">
              <div class="action_1">
                <%- if current_user -%>
                <%= link_to 'Logout', logout_path  %>
                <%- else -%>
                <%= link_to 'Sign Up', signup_path, :class => 'signup' %>
                <%= link_to 'Log in', login_path %>
                <%- end -%>
              </div>
            </div>
          </div> <!-- END login_box -->
        </div> <!-- END header -->
      </div>

      <div id="navigation_wrap" class="clear_fix">
        <div id="navigation">
          <%= render_navigation %>
          <div>
            <%= form_tag search_path, :method => :get do %>
            <%= text_field_tag :search %>
            <%= submit_tag "Search" %>
            <% end %>
          </div>
        </div>
      </div>
      
      <div id="main_wrap">
        <div id="main" class="clear_fix">
          <%- if show_title? -%>
          <h2 id="headline"><%=h yield(:title) %></h2>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
      
      <div id="footer_wrap">
        <div id="footer">
          <div id="bookmarklet_container">
            <span class="explanation">start using our app by dragging this button</span>
            <a id="bookmarklet" href="javascript:var e=document.createElement('script');e.setAttribute('language','javascript');e.setAttribute('src','http://<%= HOST %>/sidebar/load.js');document.body.appendChild(e);void(0);">show song</a>
            <span class="explanation">to your toolbar</span>
          </div>
        </div>
      </div>
    </div>
    
    <%= render 'layouts/foot' %>
		
    <%= yield(:foot) %>
    
    <script src="http://static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(66361966); }catch(err){}</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="http://in.getclicky.com/66361966ns.gif" /></p></noscript>
  </body>  
</html>