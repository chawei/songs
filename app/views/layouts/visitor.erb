<!DOCTYPE html>
<html>  
  <head>  
    <title>song <%= h("- #{yield(:title)}") unless yield(:title).blank? %></title>  
    
    <link href='http://fonts.googleapis.com/css?family=Arvo:regular,bold' rel='stylesheet' type='text/css'>
    <%= render 'layouts/head' %>
    
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>  
    <div id="container" class="no_js"> 
      <div id="flash_msgs_container">
        <div id="flash_msgs"> 
          <% flash.each do |name, msg| %>  
            <%= content_tag :div, msg, :id => "flash_#{name}" %>  
          <% end %>
        </div>
      </div>
      
      <div id="header_wrap">
        <div id="header" class="clear_fix">
          <div id="logo"><%= link_to "songBERG".html_safe, root_path %></div>
          <div id="login_box_container">
            <div id="login_box">
              <div id="greeting">
                <%= link_to 'log in', login_path %>
              </div>
            </div> <!-- END login_box -->
          </div>
        </div> <!-- END header -->
      </div>
      
      <div id="main_wrap">
        <div id="main" class="clear_fix">
          <%- if show_title? -%>
          <h2 id="headline"><%=h yield(:title) %></h2>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
      
      <div class="push"></div>
    </div>
    <div id="footer_wrap">
      <div id="footer">
        <div class="copyright">Â© 2011 songBERG</div>
      </div>
    </div>
    
    <%= render 'layouts/foot' %>
		
    <%= yield(:foot) %>
    
    <script src="http://static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(66361966); }catch(err){}</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="http://in.getclicky.com/66361966ns.gif" /></p></noscript>
  </body>  
</html>