<div id="story_section" class="section">
  <h3 class="clear_fix">
    <%= link_to "add a new story", new_lyric_background_story_path(@lyric), :class => 'add_btn' if current_user %>
  </h3>
  
  <div id="add_new_form_container">
    <%= render 'background_stories/form' if @background_story %>
  </div>
  
  <div class="items">
    <% @lyric.background_stories.delete(@background_story) %>
    <% if @lyric.background_stories.size == 0 %>
      <div class="notification">Do you know any story about this song?<br>Write it down and share!</div>
    <% else %>
      <%- for background_story in @lyric.background_stories.order('created_at DESC') -%>
      <%= render background_story %>
      <%- end -%>
    <% end %>
  </div>
</div>